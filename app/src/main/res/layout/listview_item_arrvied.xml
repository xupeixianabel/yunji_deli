<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/get_meal_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/biange"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="665dp"
        android:layout_height="130dp"
        android:layout_below="@+id/biange"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/take_meal_f1_checked">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:text="F1"
            android:textColor="@color/theme_blue"
            android:textSize="32sp" />

        <RelativeLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_selectPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:text="A区"
                android:textColor="@color/theme_blue"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_selectPoint"
                android:paddingBottom="20dp"
                android:text="请取餐"
                android:textColor="@color/theme_blue"
                android:textSize="32sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gif"

            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp">

            <com.yunji.deliveryman.view.GifView
                android:id="@+id/work_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
