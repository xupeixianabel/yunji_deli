<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
     >

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/x960"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:padding="7dp"
                android:src="@drawable/ic_setting" />

            <ImageView
                android:id="@+id/iv_cruise"
                android:layout_width="55dp"
                android:layout_height="61dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/setting"
                android:padding="7dp"
                android:src="@drawable/cruise_setting" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x40" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ll_right"
        android:layout_width="@dimen/x960"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/ll_left">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x150"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x120"
            android:layout_marginTop="@dimen/x240" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_start_task"
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/x150"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/y40"
            android:background="@drawable/ic_button_bg"
            android:textColor="@color/white"
            android:textSize="30sp" />


    </FrameLayout>


</android.support.constraint.ConstraintLayout>